<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//section/div[hasclass('client-details-box') and hasclass('clearfix')]/div[hasclass('client-details-right')]" position="inside">
            <div class="client-detail">
                <span class="label">Giro</span>
                <input class="detail l10n_cl_activity_description" name="l10n_cl_activity_description" t-on-change="captureChange" t-att-value="props.partner.l10n_cl_activity_description || ''" />
            </div>
        </xpath>
    </t>

</templates>
